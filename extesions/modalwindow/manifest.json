{
  "manifest_version": 2,
  "name": "Название",
  "description": "Описание расширения",
  "version": "0.0.1",
  "author": "Автор",
  "browser_action": {
    "default_title": "Подсказка при наведении на плагин",
    "default_icon": "icon.png",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["index.js"]
    }
  ],
  "permissions": ["activeTab"]
}